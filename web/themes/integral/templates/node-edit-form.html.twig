{#
/**
 * @file
 * Theme override for a node edit form.
 *
 * This template will be used when a node edit form specifies 'node_edit_form'
 * as its #theme callback.  Otherwise, by default, node add/edit forms will be
 * themed by form.html.twig.
 */
#}
<div class="layout-node-form clearfix node__edit">
  <div class="group__header">
    <div class="node__title">{{ form.title }}</div>
    <div class="node__actions">
      <div class="node__advanced">
        <div class="btn toggle icon-advanced"></div>
        <div class="btn__dropdown">
          {{ form.field_title_display }}
          {{ form.advanced }}
          <div class="node__delete">
            <div class="btn"></div>
            {{ form.actions.delete }}
          </div>
          {% if form['#node_published'] == '1' %}
            <div class="node__unpublish">
              <div class="btn"></div>
              {{ form.actions.unpublish }}
            </div>
          {% else %}
            <div class="node__publish">
              <div class="btn"></div>
              {{ form.actions.publish }}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="node__save">
        <div class="btn"></div>
        {{ form.actions.save }}
      </div>
    </div>
  </div>
  {% if form.field_p_regions %}
    <div class="group__navigable">
      <div class="node__nav">
        <div class="nav__fields">
          <div class="node__fields">
            <div class="fields__preview">
              <div class="p__inner">
                <div class="p__title">{{ form['#node_type'] }} Data</div>
              </div>
            </div>
          </div>
        </div>
        {% if form.field_p_regions %}
          <div class="nav__label">Hero Content</div>
          <div class="nav__paragraphs"></div>
          <div class="nav__add icon-add btn"><div class="add__bg"></div></div>
        {% endif %}
      </div>
      <div class="node__fields nav-open">
        {% if form['#title'] %}
          <h1 class="form__title">{{ form['#title'] }}</h1>
        {% endif %}
        {{ form|without('title', 'advanced', 'actions', 'field_p_regions', 'field_title_display') }}
      </div>
      {% if form.field_p_regions %}
        <div class="node__paragraphs">{{ form.field_p_regions }}</div>
      {% endif %}
    </div>
  {% else %}
    <div class="group__static">
      {{ form|without('title', 'advanced', 'actions', 'field_p_regions', 'field_title_display') }}
    </div>
  {% endif %}
</div>
